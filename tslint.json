{
    "extends": "tslint:recommended",
    "rules": {
        "max-line-length": {
            "options": [100]
        },
        "new-parens": true,
        "no-arg": true,
        "no-bitwise": true,
        "no-conditional-assignment": true,
        "no-consecutive-blank-lines": false,
        "no-console": {
            "severity": "warning",
            "options": [
                "debug",
                "info",
                "log",
                "time",
                "timeEnd",
                "trace"
            ]
        },
        "quotemark": [true, "single", "avoid-escape", "avoid-template"],
        "object-literal-sort-keys": false,
        "interface-name": [true, "never-prefix"]
    },
}